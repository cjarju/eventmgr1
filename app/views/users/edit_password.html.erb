<% provide(:title, "User | Edit") %>

<h3 class="center-txt-align"> <%= @user.name %> </h3> 
<h4 class="center-txt-align page-header-top"> Change Password </h4> 

<%= form_tag(update_user_password_path(@user), {class: "form-horizontal h-form user-form", role: "form"}) do %>

  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this blood donor from being saved:</h2>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= label_tag :password_previous, 'Previous', class: "col-sm-5 control-label" %>
    <div class="col-sm-4">
      <%= password_field_tag :password_previous, '', {class:"form-control", placeholder:"Previous Password", required: true} %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :password, 'Password', class: "col-sm-5 control-label" %>
    <div class="col-sm-4">
      <%= password_field_tag :password, '', {class:"form-control", placeholder:"New Password", required: true} %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :password_confirmation, "Confirmation", class: "col-sm-5 control-label" %>
    <div class="col-sm-4">
      <%= password_field_tag :password_confirmation, '', {class:"form-control", placeholder:"Repeat Password", required: true}  %>
    </div>
  </div>

  <div class="form-group center-txt-align"><%= submit_tag('Change' , {class: "btn btn-large btn-primary"}) %> </div>

<% end %>


 

