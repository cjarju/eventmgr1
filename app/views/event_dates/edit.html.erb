<% provide(:title, 'Event | Edit Date') %>

<h3 class="center-txt-align"> <%= link_to "#{@event.event_name}", dates_for_event_path(@event) %> </h3> 
<h4 class="center-txt-align page-header-top">Edit Date </h4> 

<%= form_for(@event_date,  html: {class: "form-inline center-txt-align", role: "form"}) do |f| %>

  <% if @event_date.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@event_date.errors.count, "error") %> prohibited this date from being saved:</h2>
        <ul>
          <% @event_date.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
  <% end %>

  <div class="row">
    <div class="form-group">
      <div class="input-group date" title="Select date">
        <%= f.text_field :event_date, {class:"form-control", placeholder:"event date", required: true } %>
        <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
      </div>
    </div>
  </div>

  <div class="form-group"><%= f.submit "Update", {class: "btn btn-large btn-primary"} %></div> 

<% end %>



