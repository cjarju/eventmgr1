<% provide(:title, 'Items') %>

<h3 class="center-txt-align page-header-top">Items</h3>

<table class="table table table-hover table-condensed">
  <thead>
    <tr>
      <th>Item Name</th>
      <th>Cost Per Unit</th>
      <th>Item Type</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.item_name %></td>
        <td class="right-aligned-cell"><%=  format_number(item.cost1_per_unit) %></td>
        <td><%= item.item_type.item_type_name %></td>
        <td><%= link_to edit_item_path(item), title: 'Edit Item' do %><i class="glyphicon glyphicon-edit"></i> <% end %></td>
        <td><%= link_to item, method: :delete, title: 'Delete Item', data: { confirm: 'Are you sure?' } do %><i class="glyphicon glyphicon-trash"></i><% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="boostrap_pagination"><%= will_paginate @items, inner_window: 2, outer_window: 1, renderer: BootstrapPagination::Rails %></div>

<div class="center-txt-align">
  <i class="glyphicon glyphicon-plus"></i> <%= link_to 'New Item',  new_item_path %>
</div>

